# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files - tabs (gofmt standard)
[*.go]
indent_style = tab
indent_size = 4

# YAML files - 2 spaces (matches current ci.yml, goreleaser.yml)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files - 2 spaces
[*.json]
indent_style = space
indent_size = 2

# Markdown files - 2 spaces, preserve trailing whitespace (line breaks)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile - must use tabs
[Makefile]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Git config files
[.git*]
indent_style = space
indent_size = 2
